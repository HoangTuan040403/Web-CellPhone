@using Doanphanmem.Models
@{
    ViewBag.Title = "Top10KhachHangMuaNhieuNhat";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
    var twelveMonthsData = ViewBag.TwelveMonthsData as Dictionary<string, decimal>;
    var topKhachHang = ViewBag.Top10KhachHang as List<Doanphanmem.Models.TopKhachHangModel>;
    var db = new QL_CHDTEntities();
    int SoLuongDonHang = 0;
    decimal TongTienMua = 0;
    int i = 1;
}


<style>
    .container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    h2 {
        color: #007bff;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #343a40;
        color: #fff;
    }

    tr:hover {
        background-color: #f5f5f5;
        transition: background-color 0.3s;
    }

    .text-center {
        color: #007bff;
        font-size: 20px;
    }
</style>
<div class="container mt-4">
    @if (ViewBag.Top10KhachHang != null)
    {
        <h2 style="text-align:center">TOP 10 KHÁCH HÀNG MUA NHIỀU NHẤT</h2>
        <table>
            <thead>
                <tr>
                    <th>Số Điện Thoại Khách Hàng</th>
                    <th>Tên Khách Hàng</th>
                    <th>Số Lượng Đơn Hàng</th>
                    <th>Tổng Tiền Mua</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var khachHang in ViewBag.Top10KhachHang)
                {
                    <tr>
                        @*<td>@(khachHang.MaKH != null ? khachHang.MaKH.ToString() : "N/A")</td>*@
                        <td>@khachHang.SoDienThoai</td>
                        <td>@khachHang.tenkh</td>
                      
                      
                        <td>@khachHang.SoLuongDonHang</td>
                        @*<td>@khachHang.TongTienMua</td>*@
                        <td> @string.Format("{0:#,##0} VND", khachHang.TongTienMua * 10)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


