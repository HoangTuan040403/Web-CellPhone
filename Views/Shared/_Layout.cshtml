                                        <li class="nav-item"><a class="nav-link" href="/YeuThich/FavoriteList">Yêu thích</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("DonHangKH", "SanPhams", new { IDCus = @HttpContext.Current.Session["UserID"].ToString() })">Đơn hàng</a></li>
                                        <li class="nav-item"> <a class="nav-link" href="@Url.Action("Edit", "KhachHang", new { id = Session["UserID"]  })">Thông tin</a></li>
                                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Đăng xuất</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
