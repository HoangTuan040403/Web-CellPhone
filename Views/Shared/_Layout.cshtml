                                <li class="nav-item submenu dropdown">
                                    <a href="~/Content/Home/#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                                       aria-expanded="false">Điện thoại</a>
                                    <ul class="dropdown-menu">
                                        @Html.Action("layloaisp_layout", "SanPhams")
                                    </ul>
                                </li>
                                <li class="nav-item"><a class="nav-link" href="/Home/ThongTin">Thông tin cửa hàng</a></li>
                                <li class="nav-item"><a class="nav-link" href="/Account/ChatOnline">Hỏi đáp</a></li>
                            </ul>
                            <ul class="nav-shop">
                                <li class="nav-item">
                                    @using (Html.BeginForm("Index", "SanPhams", FormMethod.Get))
                                    {
                                        <input type="text" placeholder="Bạn cần tìm gì?" name="SearchString" required>
                                        <i class="ti-search"></i>
                                    }
                                </li>
                                <li class="nav-item"> @Html.Action("GiohangPartial", "GioHang")</li>
                                <li class="nav-item submenu dropdown"><a class="button button-header" href="/Account/Login">Đăng nhập</a> </li>
                            </ul>
                        </div>
                    }
                </div>
            </nav>
        </div>
    </header>
    <!--================ End Header Menu Area =================-->

