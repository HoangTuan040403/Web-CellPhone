                            <li class="nav-item"><a class="nav-link" href="/SanPhams/Index">Trang chủ</a></li>
                            <li class="nav-item submenu dropdown">
                                <a href="~/Content/Home/#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                                   aria-expanded="false">Điện thoại</a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item"><a class="nav-link" href="~/Content/Home/category.html">Shop Category</a></li>
                                    <li class="nav-item"><a class="nav-link" href="~/Content/Home/single-product.html">Product Details</a></li>
                                    <li class="nav-item"><a class="nav-link" href="~/Content/Home/checkout.html">Product Checkout</a></li>
                                    <li class="nav-item"><a class="nav-link" href="~/Content/Home/confirmation.html">Confirmation</a></li>
                                    <li class="nav-item"><a class="nav-link" href="~/Content/Home/cart.html">Shopping Cart</a></li>
                                </ul>
                            </li>
                            <li class="nav-item submenu dropdown">
                                <a href="/SanPhams/ThongTin" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                                   aria-expanded="false">Thông tin cửa hàng</a>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Chat", "Account")">Hỏi đáp</a></li>
                        </ul>

                        <ul class="nav-shop menu_nav">
                            <li class="nav-item">
                                @using (Html.BeginForm("Index", "SanPhams", FormMethod.Get))
                                {
                                    <input type="text" placeholder="Bạn cần tìm gì?" name="SearchString" required>
                                    <i class="ti-search"></i>
                                }
                            </li>

                            @if (Session["UserID"] != null)
                            {
                                <li class="nav-item"><a href="/GioHang/HienThiGioHang"><i class="ti-shopping-cart"></i></a> </li>
                                <li class="nav-item submenu dropdown">
                                    <a href="~/Content/Home/#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                                       aria-expanded="false">User</a>
                                    <ul class="dropdown-menu">
                                        <li class="nav-item"><a class="nav-link" href="/YeuThich/YeuThichPartial">Yêu thích</a></li>
                                        <li class="nav-item"><a class="nav-link" href="@Url.Action("DonHangKH", "SanPhams", new { IDCus = @HttpContext.Current.Session["UserID"].ToString() })">Lịch sử đơn hàng</a></li>
                                        <li class="nav-item"><a class="nav-link" href="/KhachHang/Edit/@HttpContext.Current.Session["UserID"].ToString()">Thông tin cá nhân</a></li>
                                        <li class="nav-item"><a class="nav-link" href="~/Account/Logout">Đăng xuất</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item submenu dropdown"><a class="button button-header" href="/Account/Login">Đăng nhập</a> </li>
                            }

                        </ul>

                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!--================ End Header Menu Area =================-->

    <div>
        @RenderBody()
    </div>

