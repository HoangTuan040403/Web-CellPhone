    <title>Aroma Shop - Category</title>
    <link rel="icon" href="~/Content/Home/img/Fevicon.png" type="image/png">
    <link rel="stylesheet" href="~/Content/Home/vendors/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/Home/vendors/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/Content/Home/vendors/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/Content/Home/vendors/linericon/style.css">
    <link rel="stylesheet" href="~/Content/Home/vendors/owl-carousel/owl.theme.default.min.css">
